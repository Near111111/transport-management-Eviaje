<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_weight="0"
    android:gravity="center_vertical"
    android:background="@drawable/blfinal">


    <!-- CardView -->

    <!-- Nested LinearLayout for content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#D0EFFF"
        android:layout_marginTop="200dp">

        <!-- Image and Text Pair 1 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/portrait" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Image and Text Pair 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:text="Phone Number"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Image and Text Pair 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:text="Email"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Image and Text Pair 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/bahay" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:text="Address"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageView14"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="790dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hometome"
        app:srcCompat="@drawable/passengerhome" />

    <ImageButton
        android:id="@+id/imageView15"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="790dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/calendartome"
        app:srcCompat="@drawable/passengerschedule" />

    <ImageButton
        android:id="@+id/imageView18"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="790dp"
        android:background="@android:color/transparent"
        android:contentDescription="mapstome"
        app:srcCompat="@drawable/drivermap" />

    <ImageButton
        android:id="@+id/imageView19"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="790dp"
        android:background="@android:color/transparent"
        android:contentDescription="profile"
        app:srcCompat="@drawable/clickedprofile" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="98dp"
        android:layout_height="85dp"
        android:layout_marginLeft="150dp"
        android:paddingBottom="20dp"
        app:srcCompat="@drawable/eviajelogo" />

    <ImageButton
        android:id="@+id/imageButton21"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="450dp"
        android:background="@android:color/transparent"
        android:contentDescription="logout"
        app:srcCompat="@drawable/logout" />


</RelativeLayout>